<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:textSize="18dp"
            android:text="@string/position_tracking"
            android:textColor="@color/color_wet_asphalt"
            android:typeface="sans"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_weight="1" />

        <com.gc.materialdesign.views.Switch
            android:id="@+id/switchView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="#1E88E5" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="@string/time_tracking"
        android:textColor="@color/color_wet_asphalt"
        android:typeface="sans"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <com.gc.materialdesign.views.Slider
        android:id="@+id/sliderTime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="#1E88E5"
        materialdesign:max="200"
        materialdesign:min="50"
        materialdesign:showNumberIndicator="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="@string/distance_tracking"
        android:textColor="@color/color_wet_asphalt"
        android:typeface="sans"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <com.gc.materialdesign.views.Slider
        android:id="@+id/sliderDistance"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="#1E88E5"
        materialdesign:max="200"
        materialdesign:min="50"
        materialdesign:showNumberIndicator="true" />


</LinearLayout>
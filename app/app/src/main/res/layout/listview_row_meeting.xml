<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="#64ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20dp"
            android:text="Party Party Party 2015"
            android:textColor="@color/color_wet_asphalt"
            android:typeface="sans"
            android:layout_gravity="center"
            android:id="@+id/tvTitleMeeting"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="14dp"
            android:text="20 June 2015, 10:30"
            android:textColor="@color/color_asbestos"
            android:typeface="sans"
            android:layout_gravity="center"
            android:id="@+id/tvWhen"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="14dp"
            android:text="Two Oval Square"
            android:textColor="@color/color_asbestos"
            android:typeface="sans"
            android:layout_gravity="center"
            android:id="@+id/tvWhere"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12dp"
            android:text="TheBestUser"
            android:textColor="@color/color_wisteria"
            android:typeface="sans"
            android:layout_gravity="center"
            android:id="@+id/tvOrganizer"/>
</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.lagger.forms.meetings.CreateEditMeetingActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_wet_asphalt"
                android:textSize="24dp"
                android:gravity="left"
                android:text="Meeting name"
                android:paddingBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ivIconMeeting"
                    android:src="@drawable/icon_meeting"
                    android:layout_weight="1"/>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_weight="4">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextMeeting"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>



            <TextView
                android:textColor="@color/color_wet_asphalt"
                android:textSize="24dp"
                android:gravity="left"
                android:text="When?"
                android:paddingBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ivIconDate"
                    android:src="@drawable/icon_date"
                    android:layout_weight="1"/>

                <info.hoang8f.widget.FButton
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:onClick="onClick"
                    android:text="Date"
                    android:textColor="@color/color_silver"
                    fbutton:buttonColor="@color/color_wet_asphalt"
                    fbutton:shadowColor="@color/color_asbestos"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="4dp"
                    fbutton:cornerRadius="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ivIconTime"
                    android:src="@drawable/icon_time"
                    android:layout_weight="1"/>

                <info.hoang8f.widget.FButton
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnTimePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:onClick="onClick"
                    android:text="Time"
                    android:textColor="@color/color_silver"
                    fbutton:buttonColor="@color/color_wet_asphalt"
                    fbutton:shadowColor="@color/color_asbestos"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="4dp"
                    fbutton:cornerRadius="7dp"/>
            </LinearLayout>

            <TextView
                android:textColor="@color/color_asbestos"
                android:textSize="15dp"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:id="@+id/labelDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_wet_asphalt"
                android:textSize="24dp"
                android:gravity="left"
                android:text="Where?"
                android:paddingBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ivIconLocation"
                    android:src="@drawable/icon_location"
                    android:layout_weight="1"/>

                <info.hoang8f.widget.FButton
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:onClick="onClick"
                    android:text="Location"
                    android:textColor="@color/color_silver"
                    fbutton:buttonColor="@color/color_wet_asphalt"
                    fbutton:shadowColor="@color/color_asbestos"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="4dp"
                    fbutton:cornerRadius="7dp"/>

            </LinearLayout>
            <TextView
                android:textColor="@color/color_wet_asphalt"
                android:textSize="24dp"
                android:gravity="left"
                android:text="Guest list"
                android:paddingBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ivIconAddGuest"
                    android:src="@drawable/icon_add_guest"
                    android:layout_weight="1"/>

                <info.hoang8f.widget.FButton
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnAddGuest"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:onClick="onClick"
                    android:text="Add"
                    android:textColor="@color/color_silver"
                    fbutton:buttonColor="@color/color_wet_asphalt"
                    fbutton:shadowColor="@color/color_asbestos"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="4dp"
                    fbutton:cornerRadius="7dp"/>
            </LinearLayout>
            <ListView
                android:id="@+id/guestList"
                android:layout_height="300dp"
                android:layout_width="match_parent"
                android:paddingBottom="10dp">
            </ListView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">
                <info.hoang8f.widget.FButton
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:text="Cancel"
                    android:textColor="@color/color_silver"
                    fbutton:buttonColor="@color/color_carrot"
                    fbutton:shadowColor="@color/color_asbestos"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="4dp"
                    fbutton:cornerRadius="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>
                <info.hoang8f.widget.FButton
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:id="@+id/btnCreateMeeting"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:text="Create"
                    android:textColor="@color/color_silver"
                    fbutton:buttonColor="@color/color_green_sea"
                    fbutton:shadowColor="@color/color_asbestos"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="4dp"
                    fbutton:cornerRadius="7dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
